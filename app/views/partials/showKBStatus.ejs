                        <% strQtyperProduct = jsonitem[keys[5]] %>
                        <% strWorkStationLocation = jsonitem[keys[6]] %>
                        <% strPOQty = jsonitem[keys[7]] %>

                        <tr>
                            <td>
                                <%= strKANBANLevelID %>
